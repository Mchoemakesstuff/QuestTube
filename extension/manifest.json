{
    "manifest_version": 3,
    "name": "QuestTube",
    "version": "1.0",
    "description": "Gamified learning for YouTube videos. Complete quests, earn XP, and master knowledge through spaced repetition!",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/watch*"
            ],
            "js": [
                "scripts/api.js",
                "scripts/storage.js",
                "scripts/utils.js",
                "scripts/sounds.js",
                "scripts/particles.js",
                "scripts/modal.js",
                "scripts/content.js"
            ],
            "css": [
                "styles/base.css",
                "styles/quiz.css",
                "styles/results.css",
                "styles/mode-select.css",
                "styles/theme-v2.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*.png"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}